
{% extends "TSAppBundle::layout.html.twig" %}

{% block title %}
  Home - {{ parent() }}
{% endblock %}

{% block ts_app_body %}

  <h2>Mes produits</h2>

{% if products[0] is defined %}   
{% for statusproduct in statusproducts %} 
    {% set b=0 %}
{% for product in products %}  
        {% if product.statusproduct.id == statusproduct.id %}  
        {% if b== 0 %}  <div class="container" ><h3> {{product.statusproduct.name}} </h3>  {% endif %} 
        {{ include('TSAppBundle:Product:rawlist.html.twig', {'product': product}) }}
        {% set b=1 %}
    {% endif %} 
{% endfor %}
{% if b== 1 %} </div> {% endif %} 
{% endfor %}
     <div class="row">
         <div style="text-align: center;">
            <a href="{{ path('ts_app_product_add') }}" class="btn btn-primary">Vendre d'autres produits</a>
         </div>
     </div>
 {% else %}
     
     <h6>Tu n'as pas encore ajouté de produit à vendre !
     C'est un super moyen de vider tes armoires</h6>
     <div class="row">
         <div style="text-align: center;">
            <a href="{{ path('ts_app_product_add') }}" class="btn btn-primary">Vendre des produits</a>
         </div>
     </div>
     
{% endif %} 

    

    
{% endblock %}